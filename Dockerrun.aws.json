{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "inyps2/multi-client",
            "hostname":"client",
            "essential": false
        },
        {
            "name": "server",
            "image": "inyps2/multi-server",
            "hostname":"serverapi",
            "essential": false
        },
        {
            "name": "worker",
            "image": "inyps2/multi-worker",
            "hostname":"worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "inyps2/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                  "hostPort": 80,
                  "containerPort": 80
                }
              ],
            "links":["client","server"]
        }
    ]
}